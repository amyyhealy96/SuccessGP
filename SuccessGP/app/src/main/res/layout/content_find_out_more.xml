<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".LearnMore">



    <android.support.v7.widget.CardView
        android:id="@+id/apps_card"
        android:layout_margin="10dp"
        android:clickable="true"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="70dp"
        card_view:cardCornerRadius="4dp"
        android:foreground="?android:attr/selectableItemBackground">

        <com.kofigyan.stateprogressbar.StateProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:spb_currentStateNumber="one"
            app:spb_maxStateNumber="four"
            app:spb_checkStateCompleted="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="46dp"
                android:text="Salesforce's Success Graduate Program: What is it?"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                app:fontFamily="@font/sintony" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Salesforce has made the choice of “business or tech” a little easier with our Success Graduate Program in Europe. As a Success Graduate, you will learn to act as a technical and business consultant. You will help our customers to grow into more streamlined, efficient and profitable companies.   This uniquely designed 12-month program allows graduates to work alongside the entire business consulting and technical consulting teams (in the Salesforce world, the “Customer Success Group” (CSG) and the “Solution Engineering” (SE) teams), where they will develop their consulting skills and work on real life customer and internal projects."
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="The Types of Success Grad:"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                app:fontFamily="@font/sintony" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Our Success Graduates are streamlined into different categories based on their knowledge and expertise. If you've been researching about the Success Graduate Program, you've probably heard the terms like Solution Engineer or Technical Consultant"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Find the Perfect Role for You"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                app:fontFamily="@font/sintony" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="We know you must be confused about the elusive job categories. To help you find your perfect fit, we have generated a quick, easy and confidential Career Test for you to take, which  will provide you with a springboard right into your perfect role here at Salesforce, based on the answers you provide us with"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp" />


        </LinearLayout>
    </android.support.v7.widget.CardView>




</LinearLayout>