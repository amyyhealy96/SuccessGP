<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".FindOutMore">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/futurefore"
            android:scaleType="fitXY" />

        <android.support.v7.widget.CardView
            android:id="@+id/apps_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="4dp">


            <com.kofigyan.stateprogressbar.StateProgressBar
                android:id="@+id/state_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:spb_checkStateCompleted="true"
                app:spb_currentStateDescriptionColor="#2ec0ff"
                app:spb_currentStateNumber="four"
                app:spb_maxStateNumber="four"
                app:spb_stateBackgroundColor="#BDBDBD"
                app:spb_stateDescriptionColor="#516176"
                app:spb_stateForegroundColor="#28a2ff"
                app:spb_stateNumberBackgroundColor="@color/colorPrimary"
                app:spb_stateNumberForegroundColor="#eeeeee" />
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="86dp"
                    android:text="The Results Are In!"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    app:fontFamily="@font/sintony" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text=" â€œBased on your results, we think you would fit right in as a......."
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="26dp"
                    android:text="Demo Engineer"
                    android:textColor="@color/colorPrimary"
                    android:textSize="40sp"
                    app:fontFamily="@font/bad_script" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Your technical expertise have shaped you into a knowledgeable professional who is excited to embrace new technologies. You're looking for more than a developer role."
                    android:textColor="@android:color/darker_gray"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Sound about right? Why not apply to our unique Demo Engineering role by clicking the link below and start blazing your trail towards being a member of the Salesforce Ohana!"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="18sp" />


            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/btnApply"
                android:layout_width="280dp"
                android:layout_height="120dp"
                android:layout_gravity="bottom"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center">

                <LinearLayout

                    android:id="@+id/btjjj"
                    android:layout_width="match_parent"
                    android:layout_height="109dp"
                    android:layout_gravity="top|center|fill"
                    android:gravity="bottom"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Apply"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="19sp"
                        app:fontFamily="@font/sintony" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:textColor="@android:color/darker_gray"
                        android:visibility="visible" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Are you ready to blaze your trail?"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="15sp"
                        app:fontFamily="@font/sintony" />

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.design.widget.BottomNavigationView
                android:id="@+id/nav_apply"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="@color/current_step_default"
                app:background="@color/questionColorDark"
                app:itemBackground="@color/current_step_default"
                app:itemIconTint="@color/colorPrimary"
                app:itemTextColor="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:menu="@menu/bottom_navigation" />


        </android.support.v7.widget.CardView>


    </LinearLayout></LinearLayout>